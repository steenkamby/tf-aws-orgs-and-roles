# EditorConfig enables consistent styles to be shared across different
# editors and IDEs. For details, see: http://editorconfig.org/
root = true

[*.{groovy,js,json}]
indent_style = tab
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
max_line_length = 100

[*]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100
charset = utf-8

[*.md]
trim_trailing_whitespace = false
